extends ./layouts/main.jade

block breadcrumbs
    +breadcrumbs([{name:'分享审核',url:'user_verify.html'},{name:'审核详情'}])

block sidebar
    +sidebar('user_verify')

block style
    link(rel="stylesheet",href="css/__FILENAME__.css")

block script
    script(src="js/__FILENAME__.js")

block content
    #wrapper
    script#template(type="text/html")
        h1.text-center {{title}}
        p.lead.text-center {{author}}
        p {{content}}
        .form-actions.text-center
            button.btn.btn-info(type="button")
                i.icon-ok.bigger-110
                | 通过
            button#reject.btn.btn-danger(type="button")
                i.icon-undo.bigger-110
                | 驳回
    #modalReject.modal.fade.hide
    script#tempReject(type="text/html")
        .modal-header
            a.close(data-dismiss="modal") ×
            h3 请填写驳回原因
        .modal-body
            textarea.input-block-level(placeholder="驳回原因")
        .modal-footer
            a.btn.btn-primary 确定
