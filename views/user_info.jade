extends ./layouts/main.jade

block breadcrumbs
    +breadcrumbs([{name:'车主信息'}])

block sidebar
    +sidebar('__FILENAME__')

block style
    link(rel="stylesheet",href="css/__FILENAME__.css")

block script
    script(src="js/__FILENAME__.js")

block content
    #widget.widget-box
    script#tempWidget(type="text/html")
        .widget-header.header-color-blue
            h5.bigger.lighter
                i.icon-table
                |  车主信息列表
        .widget-body
            .widget-main.no-padding
                table.table.table-striped.table-bordered.table-hover
                    thead
                        tr
                            th ID
                            th 车主
                            th 手机号码
                            th 性别
                            th 城市
                            th 积分
                    tbody
                        | {{each list as o}}
                        tr
                            td {{o.id}}
                            td {{o.name}}
                            td {{o.phone}}
                            td {{o.sex}}
                            td {{o.city}}
                            td {{o.credit}}
                        | {{/each}}